#!/usr/bin/env python3

import logging
import time
import traceback
from influxdb import InfluxDBClient
import requests

# some const
URL_EXP_TM = 'http://163.111.168.11:8080/exp_mbus_tm.json'

# logging setup
logging.basicConfig(format='%(asctime)s %(message)s')

# connect to influxdb DB
idb = InfluxDBClient(host='localhost', port=8086, database='mydb')

while True:
    try:
        l_metrics = []
        # get data
        r = requests.get(url=URL_EXP_TM, timeout=4.0)
        for d in r.json():
            # update metrics
            l_metrics.append(
                {
                    'measurement': 'tag_historian',
                    'tags': {
                        'tag': str(d['tag']),
                        'unit': str(d['unit']),
                    },
                    'fields': {
                        'value': int(d['tm']),
                    },
                },
            )
        idb.write_points(points=l_metrics)
        # wait for next update
        time.sleep(30.0)
    except KeyboardInterrupt:
        break
    except:
        # log except to stderr
        logging.error(traceback.format_exc())
        # wait before next try
        time.sleep(30.0)
